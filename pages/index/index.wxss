/**index.wxss**/
page{
  font-size: 1.5em;
  font-weight: bold;
}

.container{padding: 0rpx}

.bg{
  width: 100%;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  display: block;
  position: fixed;
  background-size:cover;
  background-color: #efefef;
  background-position:center;
  background-repeat: no-repeat;
  overflow: hidden;
}

.topBar{
  position: relative;
  width: 100%;
  margin-top: 3%;
  justify-content: space-between;
  display: flex;
  align-items: center;
}

.locate{
  position: relative;
  left: 7%;
  display: flex;
}

.locateIcon{
  width: 70rpx;
  height: 70rpx;
  padding-right: 30rpx;
  display: inline-block;
  vertical-align: middle;
}

.locateText{
  display: inline-block;
  vertical-align: middle;
}

.addIcon{
  position: relative;
  display: flex;
  right: 5%;
  top: 50%;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.plsIcon{
  height: 100%;
  width: 100%;
} 

.infoList{
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #efefef;
  top: 80%;
  box-shadow: 0rpx -10rpx 15rpx #222;
}

.infoList>.list1{
  height: 20%;
  width: 100%;
  white-space:nowrap; 
}
.infoList>.list2{
  height: 46%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.list2>.list2_up{
  display: flex;
  flex-basis: 60%;
  justify-content: space-around;
}
.list2_up_left,.list2_up_right,.list2_down_side{
  display: flex;
  flex-basis: 50%;
  flex-direction: column;
  justify-content: space-around;
}
.list2_down_side{
  align-items: center;
}
.airTitle,.airQuality{
  display: flex;
  text-align:center;
}
.airQuality{
  font-size: 1em;
  align-self: center;
  font-weight: bolder;
}
.airTitle{
  font-weight: lighter;
  margin-left: 5%;
  font-size: .9rem;
}
.list2_up_right>view{
  font-size: .8rem;
  display: flex;
  justify-content: space-between;
  margin: 0 15rpx 0;
}
.air_left{
  border-right: 1px solid rgba(0, 16, 22, .8);
}
.list2>.list2_down{
  display: flex;
  flex-basis: 30%;
  justify-content: space-around;
}
.infoList>.list3{
  height: 30%;
  width: 100%;
}

.infoList>.lists{
  background-color: #fff;
  box-shadow: 0rpx 0rpx 10rpx #555;
}

.wtrimgContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10%;
  background-color: rgba(0, 16, 22, .15);
  margin-left: 235rpx;
  margin-right: 235rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  border-radius:40rpx;
}

.wtrimgContainer>.wtrtxt{
  position: absolute;
  width: 150rpx;
  height: 40rpx;
  font-family: dengxian;
  font-size: 1rem;
  background-color: #efefef;
  padding: 15rpx;
  border-radius: 10rpx;
  line-height: 40rpx;
  text-align: center;
}

.wtrimg{
  width: 200rpx;
  height: 200rpx;
}

.temp{
  display: block;
  text-align: center;
  margin-top: 50rpx;
  color: #efefef;
  font-size: 80rpx;
  line-height: 80rpx;
}

.tdCon{
  position: absolute;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.barr{
  flex-basis: 45%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.sqare{
  height: 85%;
  width: 25%;
  flex-direction: column;
  background-color: rgba(0, 16, 22, .15);
  border-radius: 10rpx;
  font-size: .7em;
  color: rgba(239,239,239,.85);
  text-align: center;

}
.sqare>view{
  flex-basis: 50%;
  display: flex;
  align-items:center;
}
.sqare>view>text{
  flex-basis: 100%;
}

.daily{
  margin-left: 7rpx;
  margin-right: 7rpx;
  width: 361rpx;
  height: 100%;
  border-left: 1px solid rgba(0, 16, 22, .8);
  border-right: 1px solid rgba(0, 16, 22, .8);
  font-size: .5em;
  display: inline-flex;
  justify-content: space-between;
  
}

.daily>.left{
  flex-direction: column;
  display: flex;
  margin-left: 5rpx;
  justify-content: space-around;
}
.daily>.left>image{
  margin-top: 20rpx;
}
.daily>.right{
  font-size: .8rem;
  display: flex;
  flex-direction: column;
  margin-right: 10rpx;
  justify-content: space-around;
}
.daily>.right>text{
  margin-top: 20rpx;
  text-align: center;
}